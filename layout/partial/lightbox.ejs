<div x-data="lightbox" x-show="isOpen" x-transition.opacity style="display: none;" class="lightbox-container" @click.self="close" @keydown.window.escape="close">
  <button class="lightbox-close" @click="close" aria-label="Close lightbox">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  <div class="lightbox-loader" x-show="isLoading"></div>
  <img :src="imgSrc" :alt="imgAlt" class="lightbox-img" @load="isLoading = false" x-show="!isLoading" x-transition.opacity.duration.300ms>
</div>
<script src="<%= url_for('/js/lightbox.js') %>"></script>